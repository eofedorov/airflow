{
    "version": "0.2.0",
    "configurations": [
        
      {
        "name": "LLM-Gate (uvicorn)",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": ["app.main:app", "--reload", "--host", "127.0.0.1", "--port", "8000"],
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        },
        "console": "integratedTerminal",
        "justMyCode": false
      },
      {
        "name": "LLM-Gate (uvicorn, no reload)",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": ["app.main:app", "--host", "127.0.0.1", "--port", "8000"],
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/src"
        },
        "console": "integratedTerminal",
        "justMyCode": false
      }
    ]
  }
  